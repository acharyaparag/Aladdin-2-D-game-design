#include <string>
#include <iostream>
#include "sprite.h"
#include "bullets.h"

class ShootSprite : public Sprite {
public:
  ShootingSprite(const std::string& n, const Frame*);
  ShootingSprite(const ShootingSprite& s);
  ShootingSprite& operator=(const ShootingSprite&);

  virtual void update(Uint32 ticks);
  virtual void draw() const;
  void shoot();
  virtual bool collidedWith(const Sprite*) const;

private:
  std::string bulletName;
  Bullets bullets;
  float minSpeed;
};
